<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission untuk Internet (WAJIB untuk Google Sign-In dan load gambar) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookinglapangan"
        android:usesCleartextTraffic="true">

        <!-- PembayaranSuksesActivity -->
        <activity
            android:name=".PembayaranSuksesActivity"
            android:exported="false" />

        <!-- PembayaranActivity -->
        <activity
            android:name=".PembayaranActivity"
            android:exported="false" />

        <!-- RiwayatActivity -->
        <activity
            android:name=".RiwayatActivity"
            android:exported="false" />

        <!-- JadwalActivity -->
        <activity
            android:name=".JadwalActivity"
            android:exported="false" />

        <!-- BookingActivity -->
        <activity
            android:name=".BookingActivity"
            android:exported="false" />

        <!-- BayarActivity -->
        <activity
            android:name=".BayarActivity"
            android:exported="false" />

        <!-- ProfileActivity - BARU! -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- LoginActivity - Layar Pertama (Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bookinglapangan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>