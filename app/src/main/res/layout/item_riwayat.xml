<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Bagian Gambar & Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRiwayat"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNamaRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Nama Lapangan" />

                <TextView
                    android:id="@+id/txtTanggalRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 Nov 2025"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtJamRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.00â€”11.00"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtHargaRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 75.000/jam"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:paddingTop="6dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtStatusRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selesai"
                android:textSize="13sp"
                android:textStyle="bold"
                android:padding="4dp" />

        </LinearLayout>

        <!-- ðŸ”¥ TOMBOL BAYAR SEKARANG -->
        <Button
            android:id="@+id/btnBayarRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar Sekarang"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0F9D58"
            android:layout_marginTop="10dp"
            android:padding="10dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>