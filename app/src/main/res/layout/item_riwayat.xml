<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bagian Gambar & Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Gambar Lapangan -->
            <ImageView
                android:id="@+id/imgRiwayat"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#E0E0E0" />

            <!-- Info Lapangan -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/txtStatusRiwayat"
                    android:layout_width="57sp"
                    android:layout_height="wrap_content"
                    android:text="Selesai"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="#4CAF50"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtNamaRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:text="Nama Lapangan"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/txtTanggalRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 Nov 2025"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/txtJamRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#757575"
                    android:text="10.00â€”11.00"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtHargaRiwayat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 75.000/jam"
                    android:textColor="#0070BB"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Tombol Bayar Sekarang -->
        <Button
            android:id="@+id/btnBayarRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bayar Sekarang"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0F9D58"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>